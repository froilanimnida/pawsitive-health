generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
    user_id Int @id @default(autoincrement())
    user_uuid String @unique
    email String @unique
    password_hash String
    first_name String
    last_name String
    phone_number String
    created_at DateTime
    updated_at DateTime
    pets Pets?
}

model Pets {
    pet_id Int @id @default(autoincrement())
    user_id Int @unique
    pet_uuid String @unique
    name String
    species String
    breed String
    date_of_birth DateTime
    weight_kg Int
    sex String
    medical_history String
    vaccination_history String
    created_at DateTime
    updated_at DateTime
    users Users? @relation(fields: [user_id], references: [user_id])
    appointments Appointments[] @relation("PetAppointments")
}

model Appointments {
  appointment_id Int @id @default(autoincrement())
  appointment_uuid String @unique
  pet_id Int
  pet Pets @relation("PetAppointments", fields: [pet_id], references: [pet_id])
  appointment_date DateTime
  appointment_type String
  status String
  notes String
  created_at DateTime
  updated_at DateTime
}

model MedicalRecords {
  record_id Int @id @default(autoincrement())
  record_uuid String @unique
  visit_date DateTime
  diagnosis String
  treatment String
  notes String
  created_at DateTime
  
}
